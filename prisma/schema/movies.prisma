model movies {
    id                   String         @id @default(auto()) @map("_id") @db.ObjectId
    movie_id             String?        @unique
    poster_id            String?
    poster_profile_image String?
    poster_user_name     String?
    editors_id           String[]
    movie_title          String?
    rating               Int?
    rating_count         Int?           @default(0)
    movie_trailer        String?
    tags                 String[]
    type                 String?
    synopsis             String?
    movie_genre          String[]
    released             Boolean?
    release_date         DateTime?
    copyright_license    String[]
    company              String?
    movie_poster_image   String[]
    age_rating           ageRating?
    industry             String?
    language             String?
    createdAt            DateTime?      @default(now())
    updatedAt            DateTime?      @updatedAt
    downloadLinks        downloadLink[] @relation("movieDownloadLinks") // Relationship field
}

model downloadLink {
    id       String  @id @default(auto()) @map("_id") @db.ObjectId
    user_id  String
    url      String?
    rated_by Json[]
    rating   Int?    @default(0)
    movie_id String
    movies   movies  @relation("movieDownloadLinks", fields: [movie_id], references: [movie_id])
}

enum ageRating {
    r_rated
    eighteen
    twelve
    pg13
}
